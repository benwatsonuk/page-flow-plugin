{% macro pageNav(navigation) %}

    <nav class="gem-c-pagination" role="navigation" aria-label="Pagination">
        <ul class="gem-c-pagination__list" data-module="track-click">
            {% if navigation.prev !== false %}
                <li class="gem-c-pagination__item gem-c-pagination__item--previous">
                    <a href="{{ navigation.prev.link }}" class="gem-c-pagination__link" rel="prev">
                            <span class="gem-c-pagination__link-title">
                                <svg class="gem-c-pagination__link-icon" xmlns="http://www.w3.org/2000/svg" height="13"
                                     width="17" viewBox="0 0 17 13">
                                  <path fill="currentColor"
                                        d="m6.5938-0.0078125-6.7266 6.7266 6.7441 6.4062 1.377-1.449-4.1856-3.9768h12.896v-2h-12.984l4.2931-4.293-1.414-1.414z"></path>
                                </svg>
                                <span class="gem-c-pagination__link-text">
                                  Previous
                                </span>
                            </span>
                        <span class="gem-c-pagination__link-divider visually-hidden">:</span>
                        <span class="gem-c-pagination__link-label">{{ navigation.prev.pageInfo.title }}</span>
                    </a>
                </li>
            {% endif %}
            {% if navigation.next !== false %}
                <li class="gem-c-pagination__item gem-c-pagination__item--next">
                    <a href="{{ navigation.next.link }}"
                       class="gem-c-pagination__link" rel="next">
                            <span class="gem-c-pagination__link-title">
                                <svg class="gem-c-pagination__link-icon" xmlns="http://www.w3.org/2000/svg" height="13"
                                     width="17"
                                     viewBox="0 0 17 13">
                                  <path fill="currentColor"
                                        d="m10.107-0.0078125-1.4136 1.414 4.2926 4.293h-12.986v2h12.896l-4.1855 3.9766 1.377 1.4492 6.7441-6.4062-6.7246-6.7266z"></path>
                                </svg>
                                <span class="gem-c-pagination__link-text">
                                  Next
                                </span>
                            </span>
                        <span class="gem-c-pagination__link-divider visually-hidden">:</span>
                        <span class="gem-c-pagination__link-label">{{ navigation.next.pageInfo.title }}</span>
                    </a>
                </li>
            {% endif %}
        </ul>
    </nav>

{% endmacro %}
